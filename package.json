{
  "name": "bankrupt-officer-search-web",
  "version": "1.0.0",
  "description": "Web application for searching for bankrupt officers",
  "main": "dist/server.js",
  "scripts": {
    "start": "npm run build && NODE_ENV=test node dist/server.js",
    "start:watch": "NODE_ENV=development nodemon",
    "build": "gulp build && NODE_ENV=production tsc && cp -r src/views dist",
    "build:init": "gulp copy-descriptors copy-govukfrontend",
    "build:copy-views": "gulp copy-views",
    "build:compile": "tsc --project tsconfig.prod.json --outDir dist",
    "watch": "npm run build:clean && gulp start:watch",
    "build:clean": "gulp build:clean",
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' 'test/**/*.ts' --fix",
    "test": "NODE_ENV=test && mocha --file './test/setup.ts' --require ts-node/register './test/**/*.spec.ts'",
    "test:watch": "mocha --file './test/setup.ts' --require ts-node/register './test/**/*.spec.ts' --watch",
    "test:coverage": "nyc npm test",
    "analyse-code": "sonar-scanner"
  },
  "keywords": [],
  "author": "",
  "repository": "git@github.com:companieshouse/bankrupt-officer-search-web.git",
  "license": "MIT",
  "dependencies": {
    "@companieshouse/api-sdk-node": "^2.0.117",
    "@companieshouse/node-session-handler": "^4.1.9",
    "@companieshouse/structured-logging-node": "^1.0.8",
    "accepts": "^1.3.8",
    "axios": "^1.5.1",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "govuk-frontend": "^4.7.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "isarray": "^2.0.5",
    "moment": "^2.29.4",
    "nunjucks": "^3.2.4",
    "private-api-sdk-node": "github:companieshouse/private-api-sdk-node#0.1.89",
    "ts-loader": "^9.4.4",
    "types": "^0.1.1",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@types/chai": "^4.3.6",
    "@types/cookie-parser": "^1.4.4",
    "@types/express": "^4.17.18",
    "@types/ioredis": "^5.0.0",
    "@types/mocha": "^10.0.2",
    "@types/node": "^20.8.2",
    "@types/nunjucks": "^3.2.4",
    "@types/sinon": "^10.0.18",
    "@types/sinon-chai": "^3.2.10",
    "@types/supertest": "^2.0.14",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.7.4",
    "chai": "^4.3.10",
    "del": "^7.1.0",
    "eslint": "^8.50.0",
    "gulp": "^4.0.2",
    "gulp-nodemon": "^2.5.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "sinon": "^16.0.0",
    "sinon-chai": "^3.7.0",
    "sonarqube-scanner": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "overrides": {
    "nodemon": "$nodemon",
    "glob-parent": "^5.1.2",
    "chokidar": "^2.1.8"
  },
  "nodemonConfig": {
    "watch": [
      "./src"
    ],
    "ext": "ts, html, njk",
    "legacyWatch": true,
    "ignore": [
      "**/*.spec.ts"
    ],
    "exec": "ts-node ./src/server.ts"
  }
}
