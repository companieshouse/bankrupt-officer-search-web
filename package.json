{
  "name": "bankrupt-officer-search-web",
  "version": "1.0.0",
  "description": "Web application for searching for bankrupt officers",
  "main": "dist/app/server.js",
  "scripts": {
    "start": "npm run build && NODE_ENV=test node dist/app/server.js",
    "start:watch": "NODE_ENV=development nodemon",
    "build": "gulp build && NODE_ENV=production tsc && cp -r src/views dist/app",
    "build:init": "gulp copy-descriptors copy-govukfrontend",
    "build:copy-views": "gulp copy-views",
    "build:compile": "tsc --project tsconfig.prod.json --outDir dist",
    "watch": "npm run build:clean && gulp start:watch",
    "build:clean": "gulp build:clean",
    "lint": "eslint 'src/**/*.ts' 'test/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' 'test/**/*.ts' --fix",
    "test": "NODE_ENV=test && mocha --file './test/setup.ts' --require ts-node/register './test/**/*.spec.ts'",
    "test:watch": "mocha --file './test/setup.ts' --require ts-node/register './test/**/*.spec.ts' --watch",
    "test:coverage": "nyc npm test",
    "analyse-code": "sonar-scanner"
  },
  "keywords": [],
  "author": "",
  "repository": "git@github.com:companieshouse/bankrupt-officer-search-web.git",
  "license": "MIT",
  "dependencies": {
    "@companieshouse/api-sdk-node": "^2.0.106",
    "@companieshouse/node-session-handler": "^4.1.9",
    "@companieshouse/structured-logging-node": "^1.0.8",
    "accepts": "^1.3.8",
    "axios": "^1.5.0",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.6",
    "express": "^4.18.2",
    "govuk-frontend": "^4.7.0",
    "helmet": "^7.0.0",
    "ioredis": "^5.3.2",
    "isarray": "^2.0.5",
    "moment": "^2.29.4",
    "nunjucks": "^3.2.4",
    "private-api-sdk-node": "github:companieshouse/private-api-sdk-node#0.1.89",
    "ts-loader": "^9.4.4",
    "validator": "^13.11.0",
    "yargs": "^17.7.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.6",
    "@types/cookie-parser": "^1.4.4",
    "@types/express": "^4.17.17",
    "@types/ioredis": "^4.28.10",
    "@types/mocha": "^10.0.1",
    "@types/node": "^20.5.9",
    "@types/nunjucks": "^3.2.3",
    "@types/sinon": "^10.0.16",
    "@types/sinon-chai": "^3.2.9",
    "@types/supertest": "^2.0.12",
    "@types/yargs": "^17.0.24",
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "chai": "^4.3.8",
    "del": "^7.1.0",
    "eslint": "^8.48.0",
    "gulp": "^4.0.2",
    "gulp-nodemon": "^2.5.0",
    "gulp-typescript": "^6.0.0-alpha.1",
    "lodash": "^4.17.21",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "nyc": "^15.1.0",
    "sinon": "^15.2.0",
    "sinon-chai": "^3.7.0",
    "sonarqube-scanner": "^3.1.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  },
  "nodemonConfig": {
    "watch": [
      "./src"
    ],
    "ext": "ts, html, njk",
    "legacyWatch": true,
    "ignore": [
      "**/*.spec.ts"
    ],
    "exec": "ts-node ./src/server.ts"
  }
}
