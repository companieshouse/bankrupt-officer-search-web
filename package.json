{
  "name": "bankrupt-officer-search-web",
  "version": "1.0.0",
  "description": "Web application for searching for bankrupt officers",
  "main": "dist/app/server.js",
  "scripts": {
    "start": "node dist/app/server.js",
    "start:watch": "NODE_ENV=development nodemon",
    "build": "NODE_ENV=production tsc && cp -r src/views dist/app && gulp static",
    "lint:check": "ts-standard",
    "lint": "ts-standard --fix",
    "test": "jest -c src/test/jest.config.js"
  },
  "keywords": [],
  "author": "",
  "repository": "git@github.com:companieshouse/bankrupt-officer-search-web.git",
  "license": "MIT",
  "dependencies": {
    "@companieshouse/node-session-handler": "^4.1.6",
    "@companieshouse/structured-logging-node": "^1.0.4",
    "axios": "^0.21.0",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "govuk-frontend": "^3.10.1",
    "helmet": "^4.2.0",
    "http-errors": "^1.8.0",
    "ioredis": "^4.19.4",
    "nunjucks": "^3.2.2",
    "validator": "^13.5.2",
    "yargs": "^16.2.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.14",
    "@types/nunjucks": "^3.1.3",
    "@types/supertest": "^2.0.10",
    "copyfiles": "^2.4.1",
    "gulp": "^4.0.2",
    "gulp-sass": "^4.1.0",
    "jest": "^26.6.3",
    "node-sass": "^5.0.0",
    "nodemon": "^2.0.6",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "ts-standard": "^10.0.0",
    "typescript": "^4.1.3"
  },
  "nodemonConfig": {
    "watch": [
      "./src"
    ],
    "ext": "ts, html, njk",
    "legacyWatch": true,
    "ignore": [
      "**/*.spec.ts"
    ],
    "exec": "ts-node ./src/server.ts"
  },
  "ts-standard": {
    "ignore": [
      "dist",
      "src/views/components/header/header.js"
    ]
  }
}
